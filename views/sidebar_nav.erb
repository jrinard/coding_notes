<div class="col s3 myfolders">
  <br>
  <center>
    <div class="chip">Welcome:
      <a href="#settings" class="modal-trigger"><img src="<%= current_github_avatar %>" alt="Contact Person">
        <%= current_github_username %>
        <span class="settings-icon"><i class="material-icons">settings</i></a></span>
    </div>
  </center>


  <center> <%= @language %></center>
  <ul class="collapsible" data-collapsible="accordion">
    <% if @folders.any?() %>
      <% @folders.each() do |folder| %>
        <li>
          <div class="collapsible-header blue-grey lighten-4">
            <i class="material-icons">web</i><%= folder.name %>
          <span class="edit-folder"><a href="/folder/<%= folder.id %>"><i class="material-icons">mode_edit</i></a></span>
          </div>
          <% if folder.snippets.any?() %>
            <% folder.snippets.each() do |snippet| %>
              <div class="collapsible-body blue-grey lighten-3">
                <div class="collapsible-header blue-grey lighten-4">
                  <a href="/snippet/<%= snippet.id %>"><i class="material-icons">code</i><%= snippet.title %><a href="/snippet/<%= snippet.id %>/edit"><i class="material-icons">mode_edit</i></a></a>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="collapsible-body blue-grey lighten-3">
              <div class="collapsible-header blue-grey lighten-4">
                <span><i class="material-icons">not_interested</i>No Snippet</span>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    <% else %>
      <div class="collapsible-header blue-grey lighten-4 "><i class="material-icons">not_interested</i>No Folders</div>
    <% end %>
  </ul>
</div> <!-- close sub folder div -->

<div id="settings"class="modal modal-form">
  <div class="modal-content">
    <div class="modal-header">
      <div class="row">
        <div class="col s12">
          <button type="button" class="modal-close waves-effect waves-light btn right darkblue">x</button>
          <h4><b>Settings</b></h4>
        </div>
      </div>
    </div>
    <center>
      <b><%= current_github_username %></b><br><br>
      <a href="/">Home</a><br>
      <a href="https://www.github.com/<%= current_github_username %>">Your Profile</a><br>
      <a href="https://github.com/settings/profile">Edit Profile</a><br>
      <a href="https://www.github.com/<%= current_github_username %>">Github</a><br>
      <a href="https://gist.github.com/">Gist</a><br>
      <a href="#" id="logout" class="waves-effect waves-light btn darkblue" onclick="logout()">Logout</a>
    </center>
  </div>
</div>

<script type="text/javascript">
  function logout() {
    var win = window.open('http://github.com/logout', 'logout','width=400,height=350,scrollbars=no');
    var timer = setInterval(function() {
    if(win.closed) {
        clearInterval(timer);
        window.location = "http://localhost:4567/logout";
                    }
  }, 1000);
  }

</script>
