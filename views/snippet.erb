<form class="" action="/snippet/<%= @snippet.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="update_title">Update Title</label>
  <input type="text" name="update_title" id="update_title" required>

  <label for="update_tag">Update Tags</label>
  <input type="text" name="update_tag" id="update_tag" required>

  <label for="update_description">Update Description</label>
  <input type="text" name="update_description" id="update_description" required>

  <label for="update_content">Update Code</label>
  <textarea id="textarea1" class="lined" name='update_content' required></textarea>

  <button type="submit" class="btn green">Update</button>
</form>

<form action="/snippet/<%= @snippet.id %>/edit" method="post" class="left delete-form">
 <input name="_method" type="hidden" value="delete">
 <button type="submit" class="btn red right">Delete</button>
</form>
