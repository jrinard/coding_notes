<h4><span class="darkblue-text">Snippet: <%= @snippet.title %><br></span></h4>

<div class="row">
  <form class="" action="/snippet/<%= @snippet.id %>/edit" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="input-field col s12 m6">
      <pre class="line-numbers"><code class="language-css"><%=@snippet.content %></code></pre>
      <span class="text-label" for="update_content">Update Code</span>
      <textarea id="textarea2" class="lined" name='update_content' required><%= @snippet.content %></textarea>
      <span for="update_comments"class="text-label">Update Comments</span>
      <textarea id="textarea-comments" class="lined" name='update_comments' required> <%= @snippet.comments %> </textarea>

    </div>

    <div class="col m6">
      <!-- <div class="update-box"> -->
<br>
<div class="row">
  <div class="switch">
    <label>
      Public (off)
      <% if @snippet.public%>
      <input type="checkbox" name="public" checked>
      <% else %>
      <input type="checkbox" name="public" >
      <% end %>
      <span class="lever"></span>
      Private (on)
    </label><br><br>

    Save on Gist?<br>
    <label>
       No
       <% if @snippet.gist_save%>
       <input type="checkbox" name="save_git" checked>
       <% else %>
       <input type="checkbox" name="save_git" >
       <% end %>
      <span class="lever"></span>
      Yes
    </label><br><br>

    Add to Favorites<br>
    <label>
      No
      <% if @snippet.favorite%>
      <input type="checkbox" name="add_to_fav" checked>
      <% else %>
      <input type="checkbox" name="add_to_fav" >
      <% end %>
      <span class="lever"></span>
      Yes
    </label>
  </div>
</div>
      <label for="update_title">Update Title</label>
      <input type="text" name="update_title" id="update_title" value="<%= @snippet.title %>" required><br>

      <label for="update_description">Update Description</label>
      <input type="text" name="update_description" id="update_description" value="<%= @snippet.description %>" required><br>

      <label for="update_tag">Update Tags</label>
      <input type="text" name="update_tag" id="update_tag" value='<%= @snippet.tags %>' required><br>


    <button type="submit" class="btn lightblue">Update</button>

  </form>
  <a href="/snippet/<%= @snippet.id %>/delete" class="btn red">Delete</a>
<!-- </div> -->
</div> <!-- col end box -->


</div> <!-- row end box -->
