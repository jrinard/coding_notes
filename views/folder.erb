<form class="" action="/folder/<%= @folder.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="update_name">Update Name</label>
  <input type="text" name="update_name" id="update_name" required>
  <button onclick="Materialize.toast('Updated', 4000)" type="submit" class="btn custom-button waves-effect waves-light">Update</button>
</form>

<a href="/folder/<%= @folder.id %>/delete" class="btn red">Delete</a>
